#!/bin/bash

set -o errexit
set -o pipefail

target=${1:-origin/master}
server=${NVST_SERVER:?}

source "$( dirname "${BASH_SOURCE[0]}" )"/nvst

cd "$NVST_ROOT"
git fetch
git checkout "$target"
bundle
bundle exec rake db:migrate assets:precompile

git tag `date +%Y%m%d-%H%M%S`

eye-load
bundle exec eye restart nvst
