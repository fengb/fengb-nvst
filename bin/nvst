#!/bin/bash

set -o errexit
set -o pipefail

export NVST_ROOT="$( cd "$( dirname "$( readlink ${BASH_SOURCE[0]} || echo ${BASH_SOURCE[0]})" )"/.. && pwd )"
export PATH="$NVST_ROOT/bin:$PATH"

if [ "$0" = "${BASH_SOURCE[0]}" ]; then
  if [ $# -gt 0 ]; then
    cd "$NVST_ROOT" && "$@"
  else
    cd "$NVST_ROOT" && bash
  fi
fi
